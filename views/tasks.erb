<%@tasks.each do |task|%>
    <div class="tasks">
        <input type="checkbox"
               <%="id='cb_#{task[:id]}'"%>
               <%="itemid='#{task[:id]}'"%>
               <%=task[:complete] ? 'checked' : ''%> 
               onClick="managerTask(this);" />
        <label <%="for='cb_#{task[:id]}'"%>></label>       

        <span <%="id='span_#{task[:id]}'"%> <%=task[:complete] ? "class='task_complete'" : '' %>>
               <%=task[:description]%>
        </span>
       
        <div class="options_task">
            <input type="image"
                   src="/images/edit.png"
                   class="btn_edit"
                   <%="itemid='#{task[:id]}'"%>
                   onClick="showFormToEditTask(this);return false;" />
            <input type="image"
                   src="/images/trash.png"
                   class="btn_delete"
                   <%="itemid='#{task[:id]}'"%>
                   onClick="deleteTask(this);return false;" />
        </div>
        <div id="div_edit_task_<%=task[:id]%>" class="edit_task">
            <input type="text"
                   id="txt_edit_task_<%=task[:id]%>"
                   itemid="<%=task[:id]%>"
                   class="txt_edit_task"
                   value=""/>
            <input type="button"
                   class="btn_edit_ok"
                   value="ok"
                   <%="itemid='#{task[:id]}'"%>
                   onClick="updateTask(this);"/>                
             <input type="button"
                   class="btn_edit_cancel"
                   value="Voltar"
                   <%="itemid='#{task[:id]}'"%>
                   onClick="hiddenFormOfEditTask(this);return false;"/>
        </div>
   </div>
<%end%>
