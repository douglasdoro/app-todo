<html>
    <head>
        <title>Tarefas</title>
        <link rel="icon" type="image/png" href="/images/favicon.ico"/>
        <link href="/css/style.css" rel="stylesheet" type="text/css" />
        <script language="JavaScript" type="text/javascript" src="/jquery-1.5.2.js"/></script>
        <script language="JavaScript" type="text/javascript" src="/task.js"></script> 
    </head>
    <body>
        <div id="content">
           <h1>Tarefas</h1>
           <div id="alert"></div>
           <div id="loader"></div>
           <div id="new_task" >
               <input type="text" id="txt_new_task" autocomplete="off" onblur="fillTaskText()" onFocus="clearField(this)"/>
               <input type="button" id="btn_new_task" value="Adicionar"/>
           </div>
           <div id="options">
               <span id="done">Encerradas</span>
               <span id="undone">Pendentes</span>
               <span id="all">Todas</span>
               <h3></h3>
           </div>
           <div id="tasks"></div>
        </div>
    </body>
</html>

    
